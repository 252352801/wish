/*table*/

.table {
  display: table;
  width: 100%;
  font-size: 28rpx;
}

.tr {
  display: table-row;
}

.td, .th {
  padding: 10px 15px;
  display: table-cell;
  border-bottom: 1px solid #f5f5f5;
}

/*tab*/

.tab {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70rpx;
  z-index: 1;
}

.tab .tab-item {
  flex-grow: 1;
  color: rgb(51, 51, 51);
  text-align: center;
  height: 80rpx;
  line-height: 76rpx;
  font-size: 28rpx;
  background-color: #fff;
  border-bottom: 1px solid #dcdcdc;
}

.tab .tab-item.tab-item-hover {
  background-color: rgba(255, 102, 0, 0.05);
  color: #353535;
}

.tab .tab-item.active {
  border-bottom: 4rpx solid rgb(234, 89, 88);
  color: rgb(234, 89, 88);
}

.tab-fixed.tab {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
}

/*reset*/

.list-group {
  font-size: 32rpx;
}

.list-group::before, .list-group::after {
  border: none;
}

.list-group .weui-cell::before {
  border: none;
}

.img-container image {
  max-width: 100%;
  max-height: 100%;
  width: 100%;
  height: 100%;
}

/*loader*/

.loader-container {
  display: block;
  width: 100%;
  padding: 1px;
  height: 65px;
  overflow: hidden;
}

.loaded-all-tips {
  text-align: center;
  line-height: 80rpx;
  color: rgb(187, 187, 187);
  font-size: 20rpx;
  margin-top: 20rpx;
  position: relative;
}

.loaded-all-body {
  position: relative;
  display: inline-block;
  padding: 0 20rpx;
}

.loaded-all-body::before, .loaded-all-body::after {
  content: '';
  display: block;
  width: 40rpx;
  border-top: 1px solid rgba(187, 187, 187, 0.75);
  position: absolute;
  top: 40rpx;
}

.loaded-all-body::before {
  left: -44rpx;
}

.loaded-all-body::after {
  left: 100%;
}

.null-container {
  text-align: center;
  font-size: 24rpx;
  color: rgb(187, 187, 187);
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.null-text {
  margin-top: 20rpx;
}

.null-text text {
  font-size: 24rpx;
  display: inline-block;
  vertical-align: middle;
}
.null-btn-share {
  display: inline-block;
  vertical-align: middle;
  color: rgb(242, 128, 128);
  text-decoration: underline;
  padding:0 4rpx;
  position: relative;
}
.null-btn-share:active{
  opacity: 0.75;
}
.null-btn-share button{
  position: absolute;
  left: 0;
  top:0;
  right: 0;
  bottom: 0;
  z-index: 1;
  opacity: 0;
}

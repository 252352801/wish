  clear: both;
}

/* form*/

.form-item {
  background-color: #fff;
  border-bottom: 1px solid #dcdcdc;
  padding: 0 12px;
}

.form-item-body {
  display: flex;
  min-height: 72rpx;
  align-items: center;
}

.form-item:nth-child(1) {
  border-top: 1px solid #dcdcdc;
}

.form-item label, .form-item-content {
  font-size: 26rpx;
  vertical-align: middle;
  flex-grow: 1;
}

.form-item label {
  width: 6em;
  padding-right: 1em;
}

.form-item-content {
  width: calc(100% - 7em);
  position: relative;
}

.form-item-content input {
  width: 100%;
  font-size: 13px;
}

.form-item-tips {
  display: block;
  width: 100%;
  font-size: 12px;
  color: rgb(153, 153, 153);
  flex-grow: 4;
}

.form-item-tips:last-child {
  padding-bottom: 24rpx;
}

.form-placeholder {
  color: rgb(153, 153, 153);
  font-size: 26rpx;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  display: flex;
  align-items: center;
}

/*panel-wish*/

.panel-wish {
  border-bottom: 1px solid #dcdcdc;
  padding: 24rpx 24rpx 22rpx 132rpx;
  position: relative;
}

.panel-wish-header {
  margin-bottom: 22rpx;
  font-size: 24rpx;
  overflow: hidden;
  color: rgb(102, 102, 102);
}

.panel-wish-body {
  padding: 24rpx 12rpx;
  background-color: rgb(236, 237, 238);
  margin-bottom: 18rpx;
}

.panel-wish-title {
  margin-bottom: 14rpx;
}

.panel-wish-content {
  color: rgb(153, 153, 153);
  font-size: 24rpx;
}

.panel-wish-footer {
  font-size: 22rpx;
  color: rgb(153, 153, 153);
}

.panel-wish-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #eee;
  position: absolute;
  left: 24rpx;
  top: 24rpx;
}

/**button[type='primary']**/

button[type="primary"] {
  color: #fff;
  background-color: rgb(234, 89, 88);
}

button[type="primary"][plain] {
  color: rgb(234, 89, 88);
  border-color: rgb(234, 89, 88);
  background-color: transparent;
}

button[loading][type="primary"] {
  background-color: rgb(234, 89, 88);
}

button[loading][type="primary"][plain] {
  color: rgba(234, 89, 88, 0, 0.6);
  border-color: rgba(234, 89, 88, 0.6);
  background-color: transparent;
}

button[disabled][type="primary"][plain] {
  color: rgba(0, 0, 0, 0.2);
  border-color: rgba(0, 0, 0, 0.2);
  background-color: transparent;
}

button[disabled][type="primary"] {
  color: rgba(255, 255, 255, 0.6);
  background-color: rgba(234, 89, 88, 0.6);
}

.button-hover[type="primary"] {
  background-color: rgb(234, 89, 88);
}

.button-hover[type="primary"][plain] {
  color: rgba(234, 89, 88, 0.6);
  border-color: rgba(234, 89, 88, 0.6);
  background-color: transparent;
}


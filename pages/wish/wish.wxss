/* pages/wish/wish.wxss */

page {
  background-color: rgb(236, 237, 238);
}

.wish-banner {
  padding-top: 47.33%;
  position: relative;
}

.wish-banner-body {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: #d7625d;
}

.wish-banner-body .image-banner {
  width: 100%;
  height: 100%;
}

.wish-title-select {
  padding: 36rpx 24rpx;
  text-align: center;
}

.wish-title-select .picker {
  color: #ea5958;
  display: inline-block;
  position: relative;
  vertical-align: middle;
}

.wish-title-arrow {
  display: inline-block;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-top-color: rgb(102, 102, 102);
  border-left-width: 10rpx;
  border-right-width: 10r5px;
  vertical-align: middle;
  margin-left: 12rpx;
  position: relative;
  top: 6rpx;
}
.wish-btn-bar {
  margin: 36rpx;
}
.wish-btn-pickimg{
  width: 52rpx;
  height:48rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.wish-btn-clear{
  position: absolute;
  right: 10rpx;
  top:0;
  width: 30rpx;
  height:30rpx;
  background-color: #ddd;
  border-radius: 50%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color:#fff;
}
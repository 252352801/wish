/* pages/comments/comments.wxss */

.comm-item {
  padding: 24rpx 24rpx 22rpx 132rpx;
  border-bottom: 1rpx solid #dcdcdc;
  position: relative;
}

.comm-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  position: absolute;
  left: 24rpx;
  top: 24rpx;
}

.comm-header {
  height: 88rpx;
  display: flex;
  align-items: center;
}

.comm-header > view {
  flex-grow: 2;
}

.comm-header > view:last-child {
  flex-grow: 1;
  text-align: right;
}

.comm-icon-coupon {
  display: inline-block;
  width: 27rpx;
  height: 37rpx;
  vertical-align: middle;
  overflow: hidden;
  margin-right: 14rpx;
}

.comm-icon-coupon image {
  max-width: 100%;
  max-height: 100%;
}

.comm-nickname {
  font-size: 24rpx;
  color: rgb(102, 102, 102);
  margin-bottom: 6rpx;
}

.comm-time {
  font-size: 20rpx;
  color: rgb(153, 153, 153);
}

.comm-rmb {
  font-size: 30rpx;
  color: rgb(234, 89, 88);
  display: inline-block;
  vertical-align: middle;
  height: 37rpx;
}

.comm-body {
  font-size: 26rpx;
  color: rgb(51, 51, 51);
  margin: 10rpx 0 12rpx 0;
}

.comm-wish-info {
  padding: 12rpx;
  background-color: rgb(237, 237, 237);
  font-size: 24rpx;
  color: rgb(153, 153, 153);
}

/* pages/user/user.wxss */

.user-header {
  padding-top: 37.33%;
  position: relative;
  margin-bottom: 10px;
}

.user-header-body {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgb(215, 98, 93);
  background-image: linear-gradient(180deg, rgb(215, 98, 93) 20%, rgb(232, 134, 130) 80%);
  display: flex;
  align-items: center;
  color: #fff;
}

.user-avatar {
  width: 80px;
  height: 80px;
  border: 1px solid #fff;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 12px;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-nickname {
  font-size: 16px;
  flex-grow: 1;
}

.user-wallet {
  font-size: 15px;
  height: 56rpx;
  background-color: rgb(215, 98, 93);
  border-top-left-radius: 40px;
  border-bottom-left-radius: 40px;
  overflow: hidden;
}

.user-wallet navigator {
  width: 100%;
  height: 100%;
  padding: 0 24rpx 0 28rpx;
  display: flex;
  align-items: center;
}

.user-wallet image {
  width: 16px;
  height: 16px;
  display: inline-block;
  margin-right: 4px;
}

.user-menu {
  padding-left: 56px;
  position: relative;
}

.user-menu-icon {
  width: 24px;
  height: 24px;
  position: absolute;
  left: 12px;
  top: 50%;
  margin-top: -12px;
}

.user-menu-icon image {
  width: 100%;
  height: 100%;
}

.user-menu-body {
  padding: 14px 12px 14px 0;
  font-size: 14px;
  color: rgb(51, 51, 51);
  border-bottom: 1px solid #ededed;
}

.user-menu-body:active {
  opacity: 0.75;
}

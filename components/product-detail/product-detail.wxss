/* components/product-detail/product-detail.wxss */

.pad {
  padding: 30rpx;
}

.wrap {
  padding: 30rpx;
  background-color: #fff;
  padding-bottom: 16rpx;
}

.clearfix::after {
  content: '';
  display: block;
  clear: both;
}

.pull-left {
  float: left;
}

.pull-right {
  float: right;
}

.top {
  border-bottom: 1px dashed #ddd;
  padding-bottom: 16rpx;
}

.product-name {
  font-size: 36rpx;
}

.clr-disabled {
  color: #888;
}

.clr-default {
  color: #353535;
}

.clr-primary {
  color: rgb(255, 102, 0);
}

.text-lg {
  font-size: 32rpx;
}

.text-xxl {
  font-size: 40rpx;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.flex {
  display: flex;
  align-items: center;
}

.flex-item {
  flex-grow: 1;
}

.ifmp-steps::after {
  content: '';
  display: block;
  clear: both;
}

.pad-t-sm {
  padding-top: 16rpx;
}

.pad-t-xs {
  padding-top: 10rpx;
}

.pad-b-sm {
  padding-bottom: 16rpx;
}

.bor-b {
  border-bottom: 1px solid #f5f5f5;
}

.ifmp-step {
  float: left;
  width: 160rpx;
  font-size: 12px;
  color: #353535;
  height: 98px;
}

.ifmp-step-date {
  line-height: 48rpx;
  height: 48rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.ifmp-step-date-label {
  width: 80%;
  max-width: 120rpx;
  border-left: 1px dashed #f60;
  border-top: 1px dashed #f60;
  padding-left: 24rpx;
  padding-top: 4rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  margin-right: 3rpx;
  color: #888;
}

.ifmp-step-label {
  border-top: 4px solid #f60;
  position: relative;
  text-align: center;
  font-size: 28rpx;
  line-height: 64rpx;
  color: #353535;
}

.ifmp-step-label::before {
  content: '';
  display: block;
  width: 3px;
  height: 3px;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  left: -4px;
  top: -6px;
  border: 3px solid #f60;
  z-index: 1;
}

.ifmp-step.ifmp-step-end .ifmp-step-label::before {
  position: absolute;
  left: 100%;
  margin-left: -6px;
}

.ifmp-step.ifmp-step-end .ifmp-step-date {
  text-align: right;
}

.ifmp-step.ifmp-step-end .ifmp-step-date-label {
  border-left: none;
  border-right: 1px dashed #f60;
  text-align: right;
  padding-right: 8px;
  padding-left: 0;
}

.weui-cells {
  font-size: 16px;
}

.tips-sold-out {
  color: #888;
  padding-top: 16rpx;
  border-top: 1px dashed #f5f5f5;
  text-align: center;
}
